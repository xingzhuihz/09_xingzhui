<?xml version="1.0" encoding="UTF-8"?>
<c3p0-config>
   <!-- 默认配置，如果没有指定则使用这个配置 -->
   <default-config>
      <!-- 当连接数据库时，连接多长时间连接不上，就抛出异常 3000=3秒 -->
      <property name="checkoutTimeout">3000</property>
      <!-- 一个连接空闲多长时间可以被强制回收 -->
      <!-- 每30秒检查所有连接池中的空闲连接。 -->
      <property name="idleConnectionTestPeriod">30</property>
      <!-- 最大空闲时间,30秒内未使用则连接被丢弃。 -->
      <property name="maxIdleTime">30</property>
      <!-- 初始化的池大小,是指DataSource中有几个connection -->
      <property name="initialPoolSize">2</property>
      <!-- 最多有多少个连接 -->
      <property name="maxPoolSize">4</property>
      <!-- 最少有几个 -->
      <property name="minPoolSize">2</property>
      <property name="maxStatements">50</property>
      <!-- 如果池中数据连接不够时一次增长多少个 -->
      <property name="acquireIncrement">2</property>
      <!-- 四个属性 -->
      <property name="driverClass">com.mysql.jdbc.Driver</property>
      <property name="jdbcUrl">
         <![CDATA[jdbc:mysql://127.0.0.1:3306/sql_hz?useUnicode=true&characterEncoding=UTF-8&serverTimezone=UTC]]>
          <!--&serverTimezone=UTC-->
      </property>
      <property name="user">root</property>
      <property name="password">159753</property>
   </default-config>
</c3p0-config>